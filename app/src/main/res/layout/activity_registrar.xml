<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"></LinearLayout>

        <EditText
            android:id="@+id/id_nombre"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_person_black"
            android:gravity="center"
            android:hint="Nombre(s)"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/darkBlue" />

        <EditText
            android:id="@+id/id_mail_registro"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:gravity="center"
            android:hint="correo@gmail.com"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/darkBlue" />

        <EditText
            android:id="@+id/id_telefono"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_smartphone_black_24dp"
            android:gravity="center"
            android:hint="+54 55-55555555"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/darkBlue" />

        <EditText
            android:id="@+id/id_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:gravity="center"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/darkBlue" />

        <EditText
            android:id="@+id/id_verificar_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:gravity="center"
            android:hint="Confirmar Contraseña"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/darkBlue" />

        <android.support.v7.widget.CardView
            android:id="@+id/identificacion_card_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">
            <LinearLayout
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/imagen_identificacion_id"
                android:background="@drawable/green_circle"
                android:layout_height="64dp"
                android:layout_width="64dp"
                android:padding="10dp"
                android:src="@drawable/ic_camera_alt_black_24dp"/>
                <TextView
                    android:id="@+id/detalle_identificacion"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text="Sin imagen adjunta"/>
                <View
                    android:background="@color/lightgray"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"/>
            <Button
                android:id="@+id/btn_identificacion"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_style"
                android:gravity="center"
                android:text="Identificación Oficial"
                android:textColor="@color/white"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/comprobante_card_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">
            <LinearLayout
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/imagen_comprobante_id"
                android:background="@drawable/green_circle"
                android:layout_height="64dp"
                android:layout_width="64dp"
                android:padding="10dp"
                android:src="@drawable/ic_camera_alt_black_24dp"/>
            <TextView
                android:id="@+id/detalle_comprobante"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Sin imagen adjunta"/>
            <View
                android:background="@color/lightgray"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"/>

            <Button
                android:id="@+id/btn_comprobante_domicilio"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_style"
                android:gravity="center"
                android:text="Comprobante de Domicilio"
                android:textColor="@color/white" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_crear_cuenta"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_style"
            android:gravity="center"
            android:text="Crear Cuenta"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/regreso_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:paddingBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="¿Ya tienes una cuenta? ingresa aquí" />
    </LinearLayout>
</ScrollView>